<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!--robot tag calls for separate inertia file for different bodies-->
    <xacro:include filename="inertial_macros.xacro"/>

    <!--Declare color tags to give it to materials-->
    <xacro:property name="crimson"
        <color rgba="0.86 0.08 0.24 1"/>
    </material>

    <material name="teal">
        <color rgba="0.0 0.5 0.5 0.9"/>
    </material>

    <material name="lavender">
        <color rgba="0.9 0.9 0.98 0.8"/>
    </material>

    <material name="amber">
        <color rgba="1.0 0.75 0.0 0.7"/>
    </material>

    <material name="coral">
        <color rgba="1.0 0.5 0.0 0.5"/>
    </material>

     <material name="white">
        <color rgba="1.0 1.0 1.0 1"/>
    </material>


    <!--BASE LINK, the main origin of robot-->
    <link name="base_link">
    </link>

    <!--CHASIS LINK, a cylindrical robot-->

    <joint name="round_body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="round_body"/>
        <!--origin at center of base_link, with 10 cm ground clearance-->
        <origin xyz="0 0 0.05"/>
    </joint>

    <link name="round_body">
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.15" radius="0.3"/>
            </geometry>
            <material name="crimson"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.15" radius="0.3"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.3" length="0.15" radius="0.3">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="round_body">
        <material>Gazebo/Crimson</material>
    </gazebo>

    <!--LEFT WHEEL-->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.32 0" rpy="-${3.14/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/White</material>
    </gazebo>

    <!--RIGHT WHEEL-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.32 0" rpy="${3.14/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
            <material name="coral"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel">
        <material>Gazebo/Coral</material>
    </gazebo>

    <!--CASTER wHEEL-->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="round_body"/>
        <child link="caster_wheel"/>
        <origin xyz="0.24 0 0" rpy="0 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="lavender"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="caster_wheel">
        <material>Gazebo/Lavender</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>



</robot>