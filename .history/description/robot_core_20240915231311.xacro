<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!--robot tag calls for separate inertia file for different bodies-->
    <xacro:include filename="inertial_macros.xacro"/>

    <!--Declare color tags to give it to materials-->
    <xacro:property name="red" <color rgb="1.0 0.0 0.0 1"/>
    
    <xacro:property name="green" <color rgb="0.0 1.0 0.0 1"/>

    <xacro:property name="blue" <color rgb="0.0 0.0 1.0 1"/>

    <xacro:property name="cyan" <color rgb="0.0 1.0 1.0 1"/>

    <xacro:property name="yellow" <color rgb="1.0 1.0 0.0 1"/>

    <xacro:property name="magenta" <color rgb="1.0 0.0 1.0 1"/>
 
    <!--BASE LINK, the main origin of robot-->
    <link name="base_link">
    </link>

    <!--CHASIS LINK, a cylindrical robot-->

    <joint name="round_body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="round_body"/>
        <!--origin at center of base_link, with 10 cm ground clearance-->
        <origin xyz="0 0 0.05"/>
    </joint>

    <link name="round_body">
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.15" radius="0.3"/>
            </geometry>
            <material name="${red}"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.15" radius="0.3"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.3" length="0.15" radius="0.3">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="round_body">
        <material>Gazebo/red</material>
    </gazebo>

    <!--LEFT WHEEL-->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.32 0" rpy="-${3.14/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
            <material name="magenta"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/magenta</material>
    </gazebo>

    <!--RIGHT WHEEL-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.32 0" rpy="${3.14/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel">
        <material>Gazebo/yellow</material>
    </gazebo>

    <!--CASTER wHEEL-->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="round_body"/>
        <child link="caster_wheel"/>
        <origin xyz="0.24 0 0" rpy="0 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="caster_wheel">
        <material>Gazebo/blue</material>
        <mu1 <color rgb="0.001"/>
        <mu2 <color rgb="0.001"/>
    </gazebo>



</robot>